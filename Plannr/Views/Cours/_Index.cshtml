<div id="editContainer" style="display: none;">
</div>

<script type="text/javascript">

    var editLoaded = false;

    function showEdit() {
        $('#choixContainer').fadeOut("fast", function () {
            $('#editContainer').fadeIn()
            editLoaded = false;
        })

    }

    function showIndex() {
        $('#editContainer').fadeOut("fast", function () {
            $('#choixContainer').fadeIn()
            editLoaded = false;
        })

    }

    $('#cancelEdit').live('click', function (e) {

        showIndex()

        e.preventDefault()
        return false
    })

    $('#addSalle').live('click', function (e) {
        if (!editLoaded) {
            $.get("@Url.Action("Create","Cours")", function (data) {

                $('#editContainer').html(data)
                showEdit()
                editLoaded = true
            })

        } else {
            showEdit()
        }
         e.preventDefault()
         e.stopPropagation()
         return false
    })

     </script>