@model Plannr.Models.Cours

@{
    ViewBag.Title = "Create";
}
<div id ="content-header">
<h1>Création</h1>
</div>
<div id="breadcrumb">
				<a href="#" class="tip-bottom" data-original-title="Go to Home"><i class="icon-home"></i> Home</a>
				<a href="#" class="tip-bottom"> Administration</a>
                <a href="#" class="current">Gestion Cours</a>
                <a href="#" class="current">Creation Cours</a>
			</div>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <center>

    <fieldset>
        <legend> </legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Libelle)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Libelle)
            @Html.ValidationMessageFor(model => model.Libelle)
        </div>
        <div class="control-group">
        <label class="control-label" for="">Matiere</label>
         <div class="editor-field">
            @Html.DropDownListFor(model => model.Matiere.Id, new SelectList(ViewBag.ListeMatieres, "Id", "Libelle"), "Sélectionnez une Matière")  
           
        </div>
        </div>
        <div class="control-group">
        <label class="control-label" for="">Type de cours</label>
         <div class="editor-field">
            @Html.DropDownListFor(model => model.TypeCours.Id, new SelectList(ViewBag.ListeTypeCours, "Id", "Type"), "Sélectionnez un type")  
           
        </div>
        </div>

        <p><br /></p>

        <p>
            <input class="btn btn-large btn-primary" type="submit" value="Create"  />
            <a href="@Url.Action("Index", "Cours")" class="btn btn-large" id="cancelEdit">Annuler</a>
        </p>
    </fieldset>
    </center>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}