@model Plannr.Models.Matiere


@{
    ViewBag.Title = "_CreateMatiere";
}

<div id ="content-header">
<h1>Création</h1>
</div>
<div id="breadcrumb">
				<a href="#" class="tip-bottom" data-original-title="Go to Home"><i class="icon-home"></i> Home</a>
				<a href="#" class="tip-bottom"> Administration</a>
                <a href="#" class="current">Gestion Matieres</a>
                <a href="#" class="current">Creation Matiere</a>
			</div>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <center>

    <fieldset>
        <legend>Matière</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Libelle)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Libelle)
            @Html.ValidationMessageFor(model => model.Libelle)
        </div>

         <div class="control-group">
        <label class="control-label" for="">@Html.LabelFor(model => model.Ue.Id)</label>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.Ue.Id, new SelectList( ViewBag.uesList ,"Id", "Libelle"), "Sélectionnez une UE")
         </div>
        </div>
 


        <p>

            <input class="btn btn-large btn-primary" type="submit" value="Create"  />
            <a href="@Url.Action("IndexMatiere", "Administration")" class="btn btn-large" id="cancelEdit">Annuler</a>
        </p>
    </fieldset>
        </center>

}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

