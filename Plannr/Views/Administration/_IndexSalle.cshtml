@model IEnumerable<Plannr.Models.Salle>

@{
    ViewBag.Title = "IndexSalles";
}

<h2>Index</h2>

<p>
   <a href="@Url.Action("CreateSalle", "Administration")" class="btn btn-large btn-danger" style="margin-bottom:20px" >Create New</a>
</p>
<table class="table table-striped table-condensed">
    <tr >
        <th style="background-color:#00A7C8; color:white">
            @Html.DisplayNameFor(model => model.Libelle)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr >
        <td>
            @Html.DisplayFor(modelItem => item.Libelle)
        </td>
        <td >

            @Html.ActionLink("Edit", "EditSalle", new { id=item.Id }) |
            @Html.ActionLink("Details", "DetailsSalle", new { id=item.Id }) |
            @Html.ActionLink("Delete", "DeleteSalle", new { id=item.Id })
        </td>
    </tr>
}

</table>

<a href="@Url.Action("IndexSalle", "Administration")" class="btn btn-large" id="cancelEdit">Back</a>
