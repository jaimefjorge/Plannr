@model Plannr.Models.Salle

@{
    ViewBag.Title = "CreateSalle";
}

<div id ="content-header">
<h1>Création</h1>
</div>
<div id="breadcrumb">
				<a href="#" class="tip-bottom" data-original-title="Go to Home"><i class="icon-home"></i> Home</a>
				<a href="#" class="tip-bottom"> Administration</a>
                <a href="#" class="current">Gestion Salles</a>
                <a href="#" class="current">Creation Salle</a>
			</div>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <center>
    <fieldset>
        <legend>Salle</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Libelle)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Libelle)
            @Html.ValidationMessageFor(model => model.Libelle)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Batiment)
        </div>

         <div class="control-group">
        <label class="control-label" for="">@Html.LabelFor(model => model.Batiment.Id)</label>
         <div class="editor-field">
            @Html.DropDownListFor(model => model.Batiment.Id, new SelectList(ViewBag.batsList, "Id", "Nom"), "Sélectionnez un Batiment")  
           
        </div>
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Capacite)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Capacite)
            @Html.ValidationMessageFor(model => model.Capacite)
        </div>
            

        <p>
            <input class="btn btn-large btn-primary" type="submit" value="Create"  />
            <a href="@Url.Action("IndexSalle", "Administration")" class="btn btn-large" id="cancelEdit">Annuler</a>
        </p>
    </fieldset>
    </center>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
