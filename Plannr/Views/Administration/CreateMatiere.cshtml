@model Plannr.Models.Matiere

@{
    ViewBag.Title = "CreateMatiere";
}

<h2>Create</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Matière</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Libelle)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Libelle)
            @Html.ValidationMessageFor(model => model.Libelle)
        </div>

         <div class="control-group">
        <label class="control-label" for="">@Html.LabelFor(model => model.Ue.Id)</label>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.Ue.Id, new SelectList( ViewBag.uesList ,"Id", "Libelle"), "Sélectionnez une UE")
         </div>
        </div>
 


        <p>
            <input class="btn btn-large btn-danger" type="submit" value="Create"  />
            <a href="@Url.Action("IndexMatiere", "Administration")" class="btn btn-large" id="cancelEdit">Annuler</a>
        </p>
    </fieldset>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

