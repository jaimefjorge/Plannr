              </tr>
            </thead>

</table>

        <p>
            <input type="submit" value="Save" class="btn btn-large btn-danger"/>
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "IndexMatiere")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

