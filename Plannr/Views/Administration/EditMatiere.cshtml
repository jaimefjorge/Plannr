@model Plannr.Models.Matiere
@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Matière</legend>

        @Html.HiddenFor(model => model.Id)
        <table class="table table-striped table-condensed">
  <thead>
              <tr style="background-color:#00A7C8; color:white">
                <th>@Html.DisplayNameFor(model => model.Libelle)</th>
                  <th>@Html.DisplayNameFor(model => model.Ue)</th>
                  
 

                
              </tr>
       <tr>
                <th>@Html.EditorFor(model => model.Libelle)
            @Html.ValidationMessageFor(model => model.Libelle)</th>
           <th>@Html.DropDownListFor(model => model.Ue.Id, new SelectList( ViewBag.uesList ,"Id", "Libelle"), Model.Ue.Libelle)
