@model Plannr.Models.DemandeReservation

@{
    ViewBag.Title = "Create";
}
<div class="row">
<div class="span8 offset2">

    @using (Html.BeginForm("Create", "Book", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        <legend>
            <h2>Faire une demande de réservation</h2>
        </legend>
        @Html.ValidationSummary(true)

  

            <div class="control-group">
                <label class="control-label" for="">@Html.LabelFor(model => model.Enseignement)</label>
                <div class="controls">
                    @Html.DropDownListFor(model => model.Enseignement.Id, new SelectList(ViewBag.listEnseignements, "Id", "Libelle"))
                </div>
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.BesoinProjecteur)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.BesoinProjecteur)
                @Html.ValidationMessageFor(model => model.BesoinProjecteur)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.BesoinPrises)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.BesoinPrises)
                @Html.ValidationMessageFor(model => model.BesoinPrises)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.CapaciteNecessaire)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.CapaciteNecessaire)
                @Html.ValidationMessageFor(model => model.CapaciteNecessaire)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.DateVoulue)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.DateVoulue)
                @Html.ValidationMessageFor(model => model.DateVoulue)
            </div>

         <div class="control-group">
                <label class="control-label" for="">@Html.LabelFor(model => model.CreneauSouhaite)</label>
                <div class="controls">
                    @Html.DropDownListFor(model => model.CreneauSouhaite.Id, new SelectList(ViewBag.listCreneauxHoraires, "Id", "HeureConcat"))
                </div>
            </div>


            <p>
                <input type="submit" value="Créer" class="btn btn-large btn-primary" />
                <a href="@Url.Action("Index","Book")" class="btn btn-large btn-danger">Annuler</a>
            </p>
     
    }




        
 

</div>
    </div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<script type="text/javascript">
    $("#DateVoulue").datepicker()
</script>