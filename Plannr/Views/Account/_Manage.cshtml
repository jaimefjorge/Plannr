@model Plannr.Models.LocalPasswordModel
@{
    ViewBag.Title = "Gérer le compte";
}

<div id="content-header">
    <h1>Gestion de mon compte</h1>
</div>

<div id="breadcrumb">
    <a href="#" class="tip-bottom" data-original-title="Go to Home"><i class="icon-home"></i>Home</a>
    <a href="#" class="tip-bottom">Mon compte</a>
</div>
<div class="alert">
    <button class="close" data-dismiss="alert">×</button>
    Vous pouvez ici changer votre mot de passe.
</div>
<div class="container-fluid">
   <p class="message-success">@ViewBag.StatusMessage</p>
    @if (ViewBag.HasLocalPassword)
{
    @Html.Partial("_ChangePasswordPartial")
}
else
{ 
    @Html.Partial("_SetPasswordPartial")
}
</div>







@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
